<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">
    <!-- Assignment 5.2 --> <!--In 5.1 I just used create Entity and inserted a record, as in repository Training-Assignment-5.1-->
    <service verb="store" noun="Product" type="inline">
        <description>Gone through the product entity available in mantle-udm
        Created a service to insert a record in product entity. Added dependency in component.xml file
        </description>
        <in-parameters>
            <auto-parameters include="nonpk" entity-name="mantle.product.Product"/>
            <parameter name="productName" required="true"/>
            <parameter name="description" required="true"/>
            
            <parameter name="priceUomId" entity-name="mantle.product.ProductPrice"/>
        </in-parameters>        
        <out-parameters>
            <auto-parameters include="pk"/>
            <parameter name="productId"/>
        </out-parameters>
        <actions>
            <if condition="priceUomId==null || priceUomId.length()==0"><then>
                <return error="true" message="priceUomId is needed for product price"/>
            </then><else>

            </else></if>
        </actions>
    </service>
    <service verb="get" noun="ProductDetails" type="inline">
        <in-parameters>
            <auto-parameters include="pk" entity-name="mantle.product.Product"/>
            <parameter name="productId" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="productDetails"/>
            <parameter name="productDetails2"/>
        </out-parameters>
        <actions>
            <entity-find entity-name="mantle.product.Product" list="productDetails">
                <econdition field-name="productId" value="${productId}"/>
                <select-field field-name="productId,productName,description"/>
            </entity-find>
            <if condition="!productDetails"><return error="true" message="Product does not exist"/>
            </if>
            <entity-find entity-name="mantle.product.ProductPrice" list="productDetails2">
                    <econdition field-name="productId" value="${productId}"/>
                    <select-field field-name="price,priceUomId"/>
                </entity-find>
              <!--  <filter-map-list list="productDetails" to-list="l1"/>
                <filter-map-list list="productDetails2" to-list="l1"/> -->
        </actions>
    </service>

</services>